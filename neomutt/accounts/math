set realname = "Derek Young"
set from = "dyoung.math@gmail.com"
set sendmail = "/usr/bin/msmtp -a dyoung.math"
set mbox = "+/math/[Gmail]/All Mail"
set postponed = "+math/Drafts"
set record = "+math/Sent"
set mail_check = 0
set envelope_from=yes

color status    cyan           default
color indicator cyan           default           # indicator for the "current message"
set status_format       = "-%r- %f %m New: %n%?d? Del: %d?%?t? Tag: %t?%?l? %l?  ?p?---- .: %p waiting to send :. ?--%>- %P ---[dyoung.math]---"

set attach_format = "%I %4n %T%.40d%> [dyoung.math][%.7m/%.10M, %s]"
